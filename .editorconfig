# EditorConfig helps maintain consistent coding styles across different editors
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# Go files
[*.go]
indent_style = tab
indent_size = 4

# TypeScript/JavaScript
[*.{ts,tsx,js,jsx}]
indent_size = 2

# JSON/YAML
[*.{json,yaml,yml}]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false

# Makefiles must use tabs
[Makefile]
indent_style = tab

# Shell scripts
[*.sh]
indent_size = 2

# HTML/CSS
[*.{html,css,scss}]
indent_size = 2
